<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">

    <title>{% block title %} Bonjour {% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="/bundles/framework/css/bs3/css/bootstrap-theme.min.css">
        <link rel="stylesheet" type="text/css" href="/bundles/framework/css/bs3/css/bootstrap.css">
        <link rel="stylesheet" type="text/css" href="/bundles/framework/css/creative.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
        <link rel="stylesheet" type="text/css" href="/bundles/framework/css/article.css">
    {% endblock %}


</head>

<body>
<div class="container-full">
<header>
    <nav class="navbar navbar-default" role="navigation">                     
        <div class="collapse navbar-collapse navbar-ex1-collapse">
            <ul class="nav navbar-nav" style="width: 100%;">
                <li><a href="{{ path('nft_annonce_homepage') }}" class="navbar-brand" style="width: 100%;"><i class="glyphicon glyphicon-home"></i></a></li>                      
                <li><a href="#">Vendre</a></li>
                <li><a href="{{ path('nft_membre_optionpage', {'idUt': app.user.id}) }}">Options</a></li>
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <li><a href="{{ path('fos_user_security_logout') }}">
                            {{ 'Déconnexion'|trans({}, 'FOSUserBundle') }}
                        </a>
                    </li>
                    {% else %}
                    <li>
                        <a href="{{ path('fos_user_security_login') }}">Connexion</a>
                    </li>
                    {% endif %}
                <li><a href="">Crédits : {{ credit }}</a></li>                
            </ul>                    
        </div>
    </nav>
    <div class="row background-header"></div>
</header>
    <div class="container" id="bobby">        
        <div class="row">
            <div id="menu" class="col-md-3">
                <h3>Menu</h3>
                <ul class="nav nav-pills nav-stacked">
                    <li><a href="{{ path('nft_annonce_homepage') }}">Accueil</a></li>                    
                    <li><a href="{{ path('nft_annonce_addpage', {'idUt': app.user.id}) }}">Mes annonces</a></li>
                </ul>

                <h4>Dernières annonces postées</h4>
                {{ render(controller("nftAnnonceBundle:Annonce:menu" )) }}
            </div>

            <div id="content" class="col-md-9">
                {% block body %}
                {% endblock %}
            </div>
        </div>
    </div>

    <hr>
</div>

{% block javascripts %}
    <script src="http://code.jquery.com/jquery-2.2.2.min.js"></script>
    <script src="/bundles/framework/javascript/main.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="/bundles/framework/javascript/switch/iosCheckbox.js"></script>
    <script type="text/javascript">
    jQuery(function ($){
         $(".ios").iosCheckbox();
    });
    </script>

{% endblock %}

</body>
</html>